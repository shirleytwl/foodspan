<div class="modal fade" id="grocery-add" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add Ingredient</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>

		<div class="modal-body">
			<%= form_with scope: :ingredient, url: groceries_path, local: true do |form| %>
				<div class="row">
					<div class="col-12">
						<div class="form-group">
							<%= form.label :name %>
							<%= form.text_field :name, class:"form-control",placeholder:"Name of Ingredient" %>
						</div>
					</div>

					<div class="col-12">
						<div class="form-group">
							<div class="row">
								<div class="col-12">
									<label for="quantity">Quantity</label>
								</div>
								<div class="col-6">
									<%= form.number_field :quantity, class:"form-control", placeholder:"Amount" %>
								</div>
								<div class="col-6">
									<%= form.text_field :unit, class:"form-control unit",placeholder:"Unit" %>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-12">
					<%= form.submit :class=>'btn btn-primary grocery-add-submit-btn' %>
				</div>
			<% end %>
		</div>

		</div>
	</div>
</div>