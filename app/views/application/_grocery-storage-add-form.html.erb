<%= form_with scope: :ingredient, model: @ingredient, url: add_groceries_storages_path(@ingredient), local: true do |form| %>
	<div class="form-group">
		<%= form.label :name %>
		<%= form.text_field :name, class:"form-control",placeholder:"Name of Ingredient" %>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-12">
				<label for="quantity">Expiry Date</label>
			</div>
			<div class="col-6">
				<%= form.number_field :quantity, class:"form-control",placeholder:"Amount" %>
			</div>
			<div class="col-6">
				<%= form.text_field :unit, class:"form-control",placeholder:"Unit" %>
			</div>
		</div>
	</div>
	<%= form.submit :class=>'btn btn-primary' %>
<% end %>