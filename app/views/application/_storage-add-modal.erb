<div class="modal fade" id="storage-add" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Ingredient</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<%= form_with scope: :ingredient, url: storages_path, local: true do |form| %>
				  <div class="form-group">
				  	<%= form.label :name %>
						<%= form.text_field :name, class:"form-control",placeholder:"Name of Ingredient" %>
				  </div>
				  <div class="form-group">
				  	<div class="row">
				  		<div class="col-12">
						    <label for="quantity">Total Quantity</label>
						  </div>
				  		<div class="col-6">
								<%= form.number_field :quantity, class:"form-control",placeholder:"Amount" %>
				    	</div>
				  		<div class="col-6">
								<%= form.text_field :unit, class:"form-control",placeholder:"Unit" %>
				    	</div>
				    </div>
				  </div>
				  <div class="form-group">
				  	<%= form.label :purchase_date %>
						<%= form.text_field :purchase_date, class:"form-control",id:"add-storage-purchased-date", :data => {:provide => "datepicker", :date_format => "yyyy-mm-dd"}%>
				  </div>
				  <div class="form-group">
				  	<%= form.label :expiry_date %>
						<%= form.text_field :expiry_date, class:"form-control",id:"add-storage-expiry-date", :data => {:provide => "datepicker", :date_format => "yyyy-mm-dd"}%>
				  </div>
				  <div class="form-group">
				  	<label for="name">Expire in (Days)</label>
				    <input type="number" id="add-storage-expiry-days" class="form-control">
				  </div>
        	<%= form.submit :class=>'btn btn-primary' %>
				<% end %>
      </div>
    </div>
  </div>
</div>