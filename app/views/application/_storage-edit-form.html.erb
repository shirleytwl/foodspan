<%= form_with scope: :ingredient, model: @ingredient, url: update_storages_path(@ingredient), local: true do |form| %>
	<div class="row">
		<div class="col-12">
		  <div class="form-group">
		  	<%= form.label :name %>
				<%= form.text_field :name, class:"form-control",placeholder:"Name of Ingredient" %>
		  </div>
		</div>
		<div class="col-12">
  		<div class="form-group">
		    <label for="quantity">Total Quantity</label>
		    <div class="row">
					<div class="col-6">
						<%= form.number_field :quantity, class:"form-control",placeholder:"Amount" %>
			  	</div>
					<div class="col-6">
						<%= form.text_field :unit, class:"form-control",placeholder:"Unit" %>
			  	</div>
			  </div>
			</div>
		</div>
		<div class="col-12">
		  <div class="form-group">
		  	<%= form.label :purchase_date %>
				<%= form.text_field :purchase_date, class:"form-control",id:"edit-storage-purchased-date", :data => {:provide => "datepicker", :date_format => "yyyy-mm-dd"}%>
		  </div>
		</div>
		<div class="col-12">
		  <div class="form-group">
		  	<%= form.label :expiry_date %>
				<%= form.text_field :expiry_date, class:"form-control",id:"edit-storage-expiry-date", :data => {:provide => "datepicker", :date_format => "yyyy-mm-dd"}%>
		  </div>
		</div>
		<div class="col-12">
		  <div class="form-group">
		  	<label for="name">Expire in</label>
		    <input type="number" id="edit-storage-expiry-days" min="-3650" max="3650" class="form-control">
		  </div>
		</div>
		<div class="col-12">
			<div class="form-group">
				<label for="tags">Ingredient Tags</label>

				<input name="tag" type="text" id="edit-storage-tags" class="tokenize" value = <%= tag %>>
			</div>
		</div>
		<div class="col-12">
			<%= form.submit :class=>'btn btn-primary' %>
		</div>
<% end %>

<script>
$("#edit-storage-tags").tokenfield();
</script>