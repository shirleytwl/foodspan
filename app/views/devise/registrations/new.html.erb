<div class="row text-center ">
	<div class="col-12">

	<h1 class = "title">Sign Up</h1>

	<div class = " offset-2 col-8 offset-md-4 col-md-4 register-form">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field form-group">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "lorem@gmail.com" %>
			</div>

			<div class="field form-group">
				<%= f.label :name %><br />
				<%= f.text_field :name, autofocus: true, class:"form-control", placeholder: "Lorem Ipsum" %>
			</div>

			<div class="field form-group">
				<%= f.label :password %>
				<% if @minimum_password_length %>
				<em>(min <%= @minimum_password_length %> characters)</em>
				<% end %><br />
				<%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
			</div>

			<div class="field form-group mb-0">
				<%= f.label :password_confirmation %><br />
				<%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
			</div>

			<div class="actions">
				<%= f.submit "Sign Up", class: "btn btn-primary"  %>
			</div>
		<% end %>
	</div>
	<div class = "offset-2 col-8 offset-md-4 col-md-4 register-text">
			<p class="mb-0">Have an existing account?</p>
			<p>Click <%= link_to 'here', new_user_session_path %> to login now! </p>
	</div>
</div>
